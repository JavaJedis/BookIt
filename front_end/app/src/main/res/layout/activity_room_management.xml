<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/delete_room_from_building_textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/roboto_slab"
        android:text="@string/delete_room_from_building_textView"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/top_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_names_recyclerview"
        android:layout_width="409dp"
        android:layout_height="560dp"
        app:layout_constraintBottom_toTopOf="@+id/building_management_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_room_from_building_textView"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/building_management_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/modify_time_slots_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/top_button"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/modify_time_slots_button"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:enabled="false"/>

        <Button
            android:id="@+id/delete_study_room_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_button"
            android:fontFamily="@font/roboto_slab"
            android:text="@string/delete_study_room_button"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:enabled="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>